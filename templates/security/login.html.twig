{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Logirani ste kao {{ app.user.username }}, <a href="{{ path('app_logout') }}">Odjavi se</a>
        </div>
    {% endif %}
    <div class="form-group">
    <h1 class="h3 mb-3 mt-3 font-weight-normal">Prijavi se</h1>
    <label for="inputUsername">Korisniƒçko ime: </label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-3" required autofocus>
    <label for="inputPassword">Lozinka: </label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html 
        #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Zapamti 
            </label>
        </div>
    

    <button class="btn btn-primary mt-3" type="submit">
        Prijavi se
    </button>
    </div>
</form>
</div>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">


{% endblock %}
