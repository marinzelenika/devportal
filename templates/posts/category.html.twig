{% block body %}

{% for product in products %}
 <table class="table table-hover mt-6" style="margin-top:30px;">
 <tr style="box-shadow:10px 10px 8px #888888; border-radius:12px; border:1px; border-color:#77e2e6; height:250px" class="mt-3">
      <th scope="row"><img style="height: 200px; width:200px; max-width: 100%; height: auto;
    vertical-align: middle;" src="{{ asset("uploads/files/#{product.getImage()}") }}"></th>
      <td>{{product.name}}</td>
      <td>{{product.description}}</td>
      <td>{{product.price}} ,00 KM</td>
    </tr>


</table>

{% endblock %}