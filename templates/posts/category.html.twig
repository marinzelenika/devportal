{% extends 'base.html.twig' %}


{% block body %}
    <body class="tijelo">
    <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">

                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i class="fas fa-align-left"></i>
                    <span>Kategorije</span>
                </button>

            </div>
        </nav>
    </div>



    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="{{ asset('uploads/images/logodujkic.png') }}" height="80" width="160">
            </div>

            <ul class="list-unstyled components">
                <p>Kategorije proizvoda:</p>
                {% for category in categories %}
                <li>
                    <a href="{{ path('findbycat', {'categoryId': category.id}) }}">{{ category.name }}</a>
                </li>
                {% endfor %}

            </ul>
        </nav>

    </div>






    <div class="container-lg">
        <h3>{{ category.name }}</h3>
        <div class="row">

        {% for product in products %}
            <div class="col-lg-4 d-flex align-items-stretch">
    <div class="card card-product mt-5aw" style="width: 300px;">
        <img src="{{ asset("uploads/files/#{product.getImage()}") }}" class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column text-center">
            <h5 class="card-title product-card-title">{{product.name}}</h5>
            <p class="card-text">{{product.description}}</p>
            <p class="card-text">{{product.price}},00 KM</p><i class="fas fa-coins"></i>
            <a href="#" class="btn btn-info mt-auto card-button">Detalji</a>
        </div>
    </div>
            </div>
        {% endfor %}

        </div>

    </div>
    </body>
{% endblock %}


{% block javascripts %}
    <script>

        $(document).ready(function () {

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

        });

    </script>

{% endblock %}